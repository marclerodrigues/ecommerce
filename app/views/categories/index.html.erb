<%= link_to 'New Category', new_category_path, :class => "btn btn-primary", :style => "margin-top:20px; margin-bottom:20px;" %>
<table class="table table-hover table-bordered" style="text-align: center;">
  <thead>
    <tr>
      <td>Name</td>
      <td>Total Products</td>
      <td>Actions</td>
    </tr>
  </thead>
  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td style="vertical-align: middle;"><%= link_to category.name, category_path(category) %></td>
        <td style="vertical-align: middle;"><%= total_products(category) %></td>
        <td style="vertical-align: middle;"><%= link_to 'See', category_path(category)%> <%= link_to 'Destroy', category_path(category), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>