<%= link_to 'New Product', new_product_path, :class => "btn btn-primary", :style => "margin-top:20px; margin-bottom:20px;" %>
<table class="table table-hover table-bordered" style="text-align: center;">
  <thead>
    <tr>
      <td>Image</td>
      <td>Name</td>
      <td>Price</td>
      <td>Quantity</td>
      <td>Actions</td>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |product| %>
      <tr>
        <td><%= image_tag product.image_url(:thumb).to_s %></td>
        <td style="vertical-align: middle;"><%= link_to product.name, product_path(product) %></td>
        <td style="vertical-align: middle;">R$ <%= product.price %></td>
        <td style="vertical-align: middle;"><%= product.quantity %></td>
        <td style="vertical-align: middle;"><%= link_to 'See', product_path(product)%> <%= link_to 'Destroy', product_path(product), method: :delete %></td>
      </tr>
    <% end %>
  </tbody>
</table>
